{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
   <div class="container mt-5">
      <h1 class="text-center mb-4">Profil de {{ user.first_Name }} {{ user.last_Name }}</h1>

      <div class="row justify-content-center">
         <div class="col-md-4 mb-4 text-center">
            <img src="{{ path('app_user_profile_picture') }}" alt="Photo de profil" class="img-fluid rounded mb-3">
            <button class="btn btn-primary">Changer la photo</button>
         </div>
         <div class="col-md-8">
            <p class="lead">Email : {{ user.email }}</p>
            <p>Dernière mise à jour : {{ user.updatedAt ? user.updatedAt.format('Y-m-d H:i:s') : 'N/A' }}</p>
            <p>Est vérifié : {{ user.isVerified ? 'Oui' : 'Non' }}</p>
            <p>Date GDPR : {{ user.gdpr ? user.gdpr.format('Y-m-d H:i:s') : 'N/A' }}</p>
         </div>
      </div>

