               <div class="modal-header">
                  <h5 class="modal-title" id="bioModalLabel">Modifier votre bio</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Fermer">
                     <span aria-hidden="true">&times;</span>
                  </button>
               </div>
               <div class="modal-body">
                  <!-- Ajoutez ici un formulaire pour modifier la bio -->
                  <form>
                     <div class="form-group">
                        <label for="bioTextarea">Votre Bio</label>
                        <textarea class="form-control" id="bioTextarea" rows="3">{{ user.bio ? user.bio : '' }}</textarea>
                     </div>
                     <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
                  </form>
               </div>
            </div>
         </div>
      </div>

