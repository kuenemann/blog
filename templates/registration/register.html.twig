{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
	<style>
		body {
			background-color: #CF9F22;
		}

		.custom-form {
			background-color: white;
			padding: 20px;
			border: 2px solid #007BFF;
			border-radius: 10px;
		}

		.custom-logo {
			max-width: 120px;
			height: auto;
		}
	</style>

	<div class="container">
    <div class="row justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="col-md-6">
            <div class="card custom-form">
                <div class="card-body text-center"> <!-- Ajout de la classe text-center -->
                    <div class="logo d-flex justify-content-center mb-4"> <!-- Ajout des classes d-flex et justify-content-center, mb-4 pour une marge en bas -->
                        <img src="https://cdn1.iconfinder.com/data/icons/logos-and-brands-3/512/84_Dev_logo_logos-512.png" alt="" class="custom-logo">
                    </div>
                    <h1 class="text-center">Inscription</h1>

						{{ form_start(registrationForm, {'attr': {'class': 'needs-validation'}}) }}

						<div class="form-group">
							{{ form_row(registrationForm.last_name, {
                            label: 'Nom',
                            'attr': {'class': 'form-control', 'required': true}
                        }) }}
						</div>

						<div class="form-group">
							{{ form_row(registrationForm.first_name, {
                            label: 'Pr√©nom',
                            'attr': {'class': 'form-control', 'required': true}
                        }) }}
						</div>

						<div class="form-group">
							{{ form_row(registrationForm.email, {
                            label: 'Adresse Email',
                            'attr': {'class': 'form-control', 'required': true}
                        }) }}
						</div>

						<div class="form-group">
							{{ form_row(registrationForm.plainPassword, {
                            label: 'Mot de passe',
                            'attr': {'class': 'form-control', 'required': true}
                        }) }}
						</div>

						<button type="submit" class="btn btn-primary btn-block mt-3">S'inscrire</button>

					    <div class="form-group mt-3">
							{{ form_row(registrationForm.is_verified, {
                                label: "Validation du compte",
                                'attr': {'class': 'form-check-input', 'required': true}
                            }) }}
					    </div>

					    <div class="form-group mt-3">
							{{ form_row(registrationForm.agreeTerms, {
                                label: 'Accepter les termes',
                                'attr': {'class': 'form-check-input', 'required': true}
                            }) }}
					    </div>

						{{ form_end(registrationForm) }}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
